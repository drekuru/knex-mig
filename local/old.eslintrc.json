{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": "latest",
    "extraFileExtensions": [".json"]
  },
  "env": {
    "node": true,
    "jest": true,
    "commonjs": true,
    "es2020": true
  },
  "rules": {
    "no-undef": "error",
    "func-names": "off",
    "array-bracket-newline": [
      "error",
      {
        "multiline": true
      }
    ],
    "array-element-newline": ["error", "consistent"],
    "block-spacing": "error",
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "eol-last": ["error", "always"],
    "key-spacing": [
      "error",
      {
        "mode": "strict"
      }
    ],
    "no-console": 1,
    "no-extra-semi": "error",
    "no-fallthrough": "off",
    "no-floating-decimal": "error",
    "no-lone-blocks": "error",
    "no-mixed-spaces-and-tabs": 1,
    "no-redeclare": "error",
    "no-restricted-syntax": 0,
    "no-tabs": 1,
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "no-var": "error",
    "object-curly-spacing": [
      "error",
      "always",
      {
        "objectsInObjects": true
      }
    ],
    "object-property-newline": [
      "error",
      {
        "allowAllPropertiesOnSameLine": true
      }
    ],
    "one-var-declaration-per-line": ["error", "always"],
    "prefer-const": "error",
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "space-unary-ops": 2
  },
  "ignorePatterns": ["node_modules", ".turbo", "envs", "coverage", "**/dist/**", "build", "!.*"],
  "overrides": [
    {
      "env": {
        "jest": true
      },
      "files": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
      "extends": ["plugin:jest/recommended"],
      "rules": {
        "consistent-return": 1,
        "no-underscore-dangle": 1,
        "new-cap": 1,
        "camelcase": 1,
        "jest/expect-expect": [
          "error",
          {
            "assertFunctionNames": [
              "expect",
              "expectFieldsToMatchFactory",
              "expectJobsToMatchFactory",
              "expectOrderFieldsToMatchFactory",
              "expectFields",
              "assertLines"
            ]
          }
        ],
        "jest/valid-title": 0
      }
    },
    {
      "files": ["*.json"],
      "plugins": ["json"],
      "extends": ["plugin:json/recommended"]
    }
  ]
}
